<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/button"
        android:textAllCaps="false"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_name_in"
        android:textSize="22sp"
        android:drawableLeft="@drawable/def"
        />

<TextView
        android:id="@+id/textDemo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Public Network"
        android:textSize="27sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textDemo1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="University of Dhaka"
        android:textSize="24sp"
        android:layout_margin="15dp"
        android:textStyle="bold"/>
    <EditText
        android:layout_width="241dp"
        android:layout_height="60dp"
        android:textStyle="bold"
        android:textSize="23dp"
        android:hint="@string/message1"
        android:inputType="number"
        />
    <EditText
        android:layout_width="251dp"
        android:layout_height="60dp"
        android:textStyle="bold"
        android:textSize="23dp"
        android:hint="@string/message2"
        />
    <EditText
        android:layout_width="251dp"
        android:layout_height="60dp"
        android:textStyle="bold"
        android:textSize="23dp"
        android:hint="@string/message3"
        android:inputType="date"
        />
    <Button
        android:id="@+id/button1"
        android:textAllCaps="false"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_name_out"
        android:textSize="22sp"
        android:drawableLeft="@drawable/abc"
        />

    <TextView
        android:id="@+id/textDemo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Status : Sign Out"
        android:textSize="25sp"
        android:textStyle="italic" />



</LinearLayout>



